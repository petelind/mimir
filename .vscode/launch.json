{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: runserver",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "127.0.0.1:8000"
            ],
            "django": true,
            "justMyCode": false,
            "env": {
                "DJANGO_SETTINGS_MODULE": "mimir.settings",
                "PYTHONUNBUFFERED": "1"
            },
            "python": "${workspaceFolder}/venv/bin/python",
            "console": "integratedTerminal"
        },
        {
