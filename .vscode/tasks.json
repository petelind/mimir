{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Django: runserver",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/python",
            "args": [
                "${workspaceFolder}/manage.py",
                "runserver",
                "127.0.0.1:8000"
            ],
            "options": {
                "env": {
                    "DJANGO_SETTINGS_MODULE": "mimir.settings",
                    "PYTHONUNBUFFERED": "1"
                }
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
